<% include ./partials/header%>


<div class = "container-fluid details" >

    <h1 class = "text-muted text-center details-heading__pb">Patient details  <span class ="small"><%= resident.name %></span> </h1>

	<div class = "row">
		<div class = "col-md-6 details__content">

			<div class="panel panel-default text-center">
			        <div class="panel-heading">
			          <h1>Name: <span class ="small"><%= resident.name %></span></h1>
			        </div>
			        <div class="panel-body">
			          <h3>Age:<strong><%=resident.age%></strong></h3>
			          <h3>Gender:<strong><%=resident.gender%></strong></h3>
			        </div>

			        <div class="panel-footer">
			          <button class="btn btn-sm">Update</button>
			          <button class="btn btn-sm">Delete</button>
			        </div>
			  </div> 
    		</div>

    		<div class = "col-md-6 content details__content">
			<img src="<%= resident.imageUrl %>" alt="patient picture">
		</div>
	</div>		
	</div>

</div> <!--container -->


<% include ./partials/footer%>

