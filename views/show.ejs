<% include ./partials/header%>
<div class = "container-fluid details" >
    <h1 class = "text-muted  details-heading__pb">Patient details  <span class ="small"><%= resident.name %></span> </h1>

	<div class = "row">
		<div class = "col-md-8 details__content">
			<div class="panel panel-default text-center">
			        <div class="panel-heading">
			          <h1>Name:<span class="small"><%= resident.name%></span></h1>
			        </div>
			        <div class="panel-body">
			          <h3>Age:<strong><%=resident.age%></strong></h3>
			          <h3>Gender:<strong><%=resident.gender%></strong></h3>
			        </div>

			        <div class="panel-footer">
			          <a href = "/residents/<%= resident._id%>/edit" class="btn btn-lg">Update</a>
			          <form action="/residents/<%= resident._id%>?_method=DELETE" method = "POST">
					<button class="btn btn-lg">Delete</button>
			          </form>
			          
			          <a href = "/" class="btn btn-lg">Home</a>
			        </div>
			  </div> 
    		</div>
    		<div class = "col-md-4 content details__content">
			<img src="<%= resident.imageUrl %>" alt="patient picture" class = "img-responsive">
		</div>
	</div>		
	</div>

</div> <!--container -->
<% include ./partials/footer%>

